
{% extends "base.html.twig" %}


{% block titulo %} 
    <h1><i class="icon20 i-user-plus"></i> Información Personal </h1>
{% endblock %}

{% block contenido %}


{{form_open(null, {'class':'form-horizontal'})}}
    <div class="form-group">
        <label class="col-md-3 control-label">Nombre Completo:</label>
        <div class="col-md-3">
            
        </div>
        <div class="col-md-3">
            
        </div>
    </div>


    <div class="form-group">
        <label class="col-md-3 control-label">E-mail:</label>
        <div class="col-md-6">
            {{ form_input({name:'email', type:'email', class:'',  value:set_value('email', user.email)}) }}
            <label class="error">{{form_error('email')}}</label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Teléfono:</label>
        <div class="col-md-3">
            {{form_input('phone', set_value('phone', user.phone))}}
        </div>
    </div>

    <hr/>

    <div class="form-group">
        <label class="col-md-3 control-label">Perfil:</label>
        <div class="col-md-5">
            {{ form_dropdown('profile', perfiles, set_value('profile', currentProfile), form_error('profile') ? 'class="error"' : '') }}
            {% if form_error('profile') %}
                <label class='error'>{{ form_error('profile') }}</label>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Nombre de Usuario:</label>
        <div class="col-md-5">
            {{ form_input(username)}}
            {% if form_error('username') %}
                <label class='error'>{{ form_error('username') }}</label>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Contraseña:</label>
        <div class="col-md-5">
            {# <input type="password" class="form-control" name="password" placeholder="Asigne una contraseña al nuevo usuario"> #}
            {{ my_input('password',{'type':'password', 'placeholder':'Digite una nueva contraseña para cambiarla' }) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Confirmar Contraseña:</label>
        <div class="col-md-5">
            {# <input type="password" class="form-control" name="password" placeholder="Reescriba la contraseña que desea asignar"> #}
            {{ my_input('password_confirm', {'type':'password', 'placeholder':'Reescriba la contraseña que desea asignar' }) }}
        </div>
    </div>

    <br/>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-5">
            <button type="submit" class="btn btn-lg btn-success">Guardar</button>
            <a href="{{site_url("auth")}}" class="btn btn-lg btn-default">Cancelar</a>
        </div>
    </div>
{{form_close()}}

{% endblock %}
