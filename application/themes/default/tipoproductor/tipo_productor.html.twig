<script>
    $(function() {
        {% if notif %}
        notif({{notif|json_encode}});
        {% endif %}

        $("input[type='radio'], input[type='checkbox']").uniform();


        $("input[type=number]").keydown(function(event) {
            // Allow: backspace, delete, tab, escape, enter and .
            if ($.inArray(event.keyCode, [46, 8, 9, 27, 13, 190, 110]) !== -1 ||
                    // Allow: Ctrl+A
                            (event.keyCode == 65 && event.ctrlKey === true) ||
                            // Allow: home, end, left, right
                                    (event.keyCode >= 35 && event.keyCode <= 39)) {
                        // let it happen, don't do anything
                        return;
                    }
                    else {
                        // Ensure that it is a number and stop the keypress
                        if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105)) {
                            event.preventDefault();
                        }
                    }
                });
    });
</script>


<script type="text/javascript">


    /*
     * Utilidad es igual a ingresos menos egresos     
     */
    function calcularUtilidad() {

        var total_ingresos = parseFloat($('.respuestas_ingresos[readonly]').val());
        var total_egresos = parseFloat($('.respuestas_egresos[readonly]').val());
        var objUtilidad = $('.respuestas_c_totales').first();//primero de dos
        objUtilidad.val(total_ingresos - total_egresos);

        ///recalculo la relacion beneficio-costo
        calcularBeneficioCosto();
    }

    /*
     * La relacion beneficio-costo es igual al total de ingresos dividio la utilidad  
     */
    function calcularBeneficioCosto() {

        var total_ingresos = parseFloat($('.respuestas_ingresos[readonly]').val());
        var utilidad = parseFloat($('.respuestas_c_totales').first().val());
        var objBeneficioCosto = $('.respuestas_c_totales').last();//ultimo de dos

        console.log('en calcular beneficios' + (total_ingresos / utilidad));

        if (utilidad)
            objBeneficioCosto.val(total_ingresos / utilidad);
    }


    function calcularTotalActivos() {
        var total = 0;
        $('.respuestas_activos').each(function() {
            var obj = $(this);

            ///El unico readonly debe ser el del total
            if (!obj.is('[readonly]') && obj.val())
                total += parseFloat(obj.val());
        });
        $('.respuestas_activos[readonly]').val(total);
    }

    function calcularTotalIngresos() {
        var total = 0;
        $('.respuestas_ingresos').each(function() {
            var obj = $(this);

            ///El unico readonly debe ser el del total
            if (!obj.is('[readonly]') && obj.val())
                total += parseFloat(obj.val());
        });
        $('.respuestas_ingresos[readonly]').val(total);

        ///recalculo las utilidad
        calcularUtilidad();
    }

    function calcularTotalEgresos() {
        var total = 0;
        $('.respuestas_egresos').each(function() {
            var obj = $(this);

            ///El unico readonly debe ser el del total
            if (!obj.is('[readonly]') && obj.val())
                total += parseFloat(obj.val());
        });
        $('.respuestas_egresos[readonly]').val(total);

        ///recalculo las utilidad
        calcularUtilidad();
    }

    $(document).ready(function() {
        $('.respuestas_activos').change(calcularTotalActivos);
        $('.respuestas_ingresos').change(calcularTotalIngresos);
        $('.respuestas_egresos').change(calcularTotalEgresos);
    });

</script>

