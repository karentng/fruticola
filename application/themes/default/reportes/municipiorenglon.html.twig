<script type="text/javascript">
    var info = {{infoJSON}};
    var municipios = {{municipiosJSON}};
    var renglones = {{renglonesJSON}};

    var municipio = 0;
    var renglon = 0;
    var dataM = null;
    var dataR = null;

    dataM = generarDataMunicipio();
    dataR = generarDataRenglon();

    var exportConfig = {
        menuTop: "21px",
        menuBottom: "auto",
        menuRight: "21px",
        backgroundColor: "#efefef",
        menuItemStyle: {
            backgroundColor: '#EFEFEF',
            rollOverBackgroundColor: '#DDDDDD'},
            menuItems: [{
                textAlign: 'center',
                icon: "{{ base_url('assets/amcharts/images/export.png') }}",
                onclick: function() {
                },
                items: [{
                        title: 'JPG',
                        format: 'jpg'
                    }, {
                        title: 'PNG',
                        format: 'png'
                    }, {
                        title: 'SVG',
                        format: 'svg'
                    }, {
                        title: 'PDF',
                        format: 'pdf'
                    }]
            }]
    }

    var chart = AmCharts.makeChart("chartdiv", {
        "type": "pie",  
        "theme": "none",
        "startDuration": 2,
        "sequencedAnimation": true,
        "startEffect": "elastic",
        /*"legend": {
            "markerType": "circle",
            "position": "right",
            "marginRight": 80,      
            "autoMargins": false
        },*/
        "dataProvider": dataM,
        "valueField": "number",
        "outlineAlpha": 0.4,
        "depth3D": 15,
        "angle": 30,
        "titleField": "renglon",
        //"balloonText": "[[title]]<br><span style='font-size:14px'><b>[[value]]</b> ([[percents]]%)</span>",
        "balloonText": "[[title]] = <b>[[percents]]%</b></span>",
        "exportConfig": exportConfig
    });

    var chart2 = AmCharts.makeChart("chartdiv2", {
    "theme": "none",
    "startDuration": 2,
    "sequencedAnimation": true,
    "startEffect": "elastic",
    "type": "serial",
    "dataProvider": dataR,
    "valueAxes": [{
        "title": "Número de Fincas"
    }],
    "graphs": [{
        "balloonText": "<b>Número de fincas en [[category]] con producción de [[todos]]: [[value]]</b>",
        "fillAlphas": 1,
        "lineAlpha": 0.2,
        "title": "Income",
        "type": "column",
        "valueField": "number"
    }],
    "depth3D": 20,
    "angle": 30,
    "rotate": true,
    "categoryField": "municipio",
    "categoryAxis": {
        "gridPosition": "start",
        "fillAlpha": 0.05,
        "position": "left"
    },
    "exportConfig":exportConfig
});

    // Primera grafica
    function actualizarMunicipio(){
        chart.dataProvider = generarDataMunicipio();
        chart.validateData();
        chart.animateAgain();
    }

    function generarDataMunicipio(){
        var seleccionados = $("#municipio").select2('data');
        if(seleccionados.length == 0){
            var mun = Array();
            var contar = 0;
            for (var i in municipios) {
                var aux = municipios[i];
                mun.push({id: aux.id, text: aux.nombre,num:contar});
                contar++;
            }
            seleccionados = mun;
        }
        var data = [];
        for(var i = 0;i<renglones.length;i++){
            var acumulado = 0;
            for(var j = 0;j<seleccionados.length;j++){
                acumulado += parseInt(info[seleccionados[j]['num']][i]);
            }
            var aux = {
                'renglon': renglones[i].descripcion+"("+acumulado+" productores)",
                'number': acumulado,
            };
            data.push(aux);
        }
        return data;
    }
    // fin primera grafica

    //segunda grafica

    function actualizarRenglon(){
        //renglon = $('#selectRenglon').val();
        chart2.dataProvider = generarDataRenglon();
        chart2.validateData();
        chart2.animateAgain();
    }

    function generarDataRenglon(){
        var seleccionados = $("#renglon").select2('data');
        if(seleccionados.length == 0){
            var mun = Array();
            var contar = 0;
            for (var i in renglones) {
                var aux = renglones[i];
                mun.push({id: aux.id, text: aux.descripcion,num:contar});
                contar++;
            }
            seleccionados = mun;
        }
        var cadenaRenglones = "";
        for(var i=0;i<seleccionados.length;i++){
            if(i == seleccionados.length-1){
                cadenaRenglones += seleccionados[i]['text']
            }else{
                cadenaRenglones += seleccionados[i]['text']+",";
            }
        }
        var data = [];
        //renglones
        for(var i = 0;i<municipios.length;i++){
            var acumulado = 0;
            for(var j=0;j<seleccionados.length;j++){
                acumulado += parseInt(info[i][seleccionados[j]['num']]);
            }
            var aux = {
                'municipio': municipios[i].nombre,
                'number': acumulado,
                'renglon': renglones[renglon].descripcion,
                'todos': cadenaRenglones
            };
            data.push(aux);
        }
        return data;
    }
    //fin segunda grafica
 
    $(document).ready(function() {   
    
        $('a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
             chart.invalidateSize();
             chart2.invalidateSize();
        });

        var initialized = false;
        $('a#linktabla').on("shown.bs.tab", function() {
            if(initialized) return;
            initialized = true;
            myDataTable('#mitabla', {
                "sDom": "<'row'<'col-md-6'T><'col-md-6'f>>t<'row'<'col-lg-6'i><'col-lg-6'p>>",
                'bPaginate':false,
                bStateSave: false,
                "oTableTools": {
                    aButtons:["xls"],
                    "sSwfPath": "{{base_url('assets/js/plugins/tables/datatables/copy_csv_xls_pdf.swf')}}"

                }
            });
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function() {
        // primer grafica
        var mun = Array();
        var contar = 0;
        for (var i in municipios) {
            var aux = municipios[i];
            mun.push({id: aux.id, text: aux.nombre,num:contar});
            contar++;
        }
        $('#municipio').select2({
            data: mun,
            multiple: true,
            placeholder: "Todos los Municipios"
        });
        $("#municipio").change(function() {
            actualizarMunicipio();
        });

        //segunda grafica
        var ren = Array();
        contar = 0;
        for (var i in renglones) {
            var aux = renglones[i];
            ren.push({id: aux.id, text: aux.descripcion,num:contar});
            contar++;
        }
        $('#renglon').select2({
            data: ren,
            multiple: true,
            placeholder: "Todos los Renglones"
        });
        $("#renglon").change(function() {
            actualizarRenglon();
        });
    });
</script>

{% endblock %}

