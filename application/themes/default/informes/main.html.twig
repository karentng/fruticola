        {% for inf in informes %}
            <li class="center">
                <a href="#" id="informe_{{loop.index}}" onclick="cargar_informe('{{site_url(inf.url)}}','informe_{{loop.index}}')" class="clearfix enlace-informe">
                    <span class="icon {{inf.color}}"><i class="icon24 {{inf.icon}}"></i></span>
