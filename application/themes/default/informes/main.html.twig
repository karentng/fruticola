{% extends "base.html.twig" %}

{% block html_head %}
    <style>
    .stats-buttons li a {
        height:100px;
    }

    .seleccionado {
        background:  white !important; /*#4e525d*/
    }
    </style>

    <script>
        function cargar_informe(url, id) 
        {
            console.log("car");
            $('.enlace-informe').removeClass('seleccionado');
            $('#'+id).addClass('seleccionado');
            var div_contenido = $('#contenido_informe');

            div_contenido.html("<h2 class='text-muted'><em>Cargando...</em></h2>");
            div_contenido.load(url);
        }
    </script>
{% endblock %}

{% block breadcrumb_container %}{% endblock %}
{% block title_container %}{% endblock %}

{% block contenido %}
<h1 class="page-header">
