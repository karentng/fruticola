        $('#referencias_fin2_departamento').val('{{set_value2("referencias_fin2_departamento", referencias_financieras[1].departamento_id)}}').change();
        $('#referencias_com_departamento').val('{{set_value2("referencias_com_departamento", referencias_comerciales[0].departamento_id)}}').change();

