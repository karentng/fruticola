        $('#descripcion_bien_2_3').val('{{set_value2("descripcion_bien_2_3", descripcion_bienes_inmuebles[1].municipio_id)}}');
        $('#descripcion_bien_3_3').val('{{set_value2("descripcion_bien_3_3", descripcion_bienes_inmuebles[2].municipio_id)}}');
