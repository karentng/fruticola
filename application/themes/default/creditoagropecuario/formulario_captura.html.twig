        $('#descripcion_bien_2_2').val('{{set_value2("descripcion_bien_2_2", descripcion_bienes_inmuebles[1].departamento_id)}}').change();
        $('#descripcion_bien_3_2').val('{{set_value2("descripcion_bien_3_2", descripcion_bienes_inmuebles[2].departamento_id)}}').change();

