<script type="text/javascript">

    var combos, depart;

    $(document).ready(function() {

        {% if notif %}
        notif({{notif|json_encode}});
        {% endif %}

        combos = {{combos|json_encode}};
        departamentos = $('<select>');

        crear_combo_deptos();

        $('input, textarea').change(function() {
            var inputValue = $(this).val();

            if (typeof inputValue !== "string")
                return false;

            var capitalized = inputValue.toUpperCase();
            if (capitalized !== inputValue) {
                $(this).val(capitalized);
            }

        });

        //console.debug(departamentos.html());
        //console.debug(combos['departamentos']);

        $('#banco_agrario_departamento, #referencias_fam1_departamento, #referencias_fam2_departamento, #referencias_per1_departamento, #referencias_per2_departamento, #referencias_fin1_departamento, #referencias_fin2_departamento, #referencias_com_departamento, #informacion_pre_departamento').append(departamentos.html()).on('change', function() {
            var id = $(this).attr('id');
            var value = $(this).val();
            var last_index = id.lastIndexOf('_');
            var new_id = last_index == -1 ? 'municipio' : id.substring(0, last_index) + '_municipio';

            if (value != '')
                $('#' + new_id).empty().append(crear_combo_mupios(combos['departamentos'][value].municipios).html());
        });

        $('#descripcion_bien_1_2, #descripcion_bien_2_2, #descripcion_bien_3_2').append(departamentos.html()).on('change', function() {
            var id = $(this).attr('id');
            var value = $(this).val();
            var last_index = id.lastIndexOf('_');
            var new_id = id.substring(0, last_index) + '_3';
            
            if (value != '')
                $('#' + new_id).empty().append(crear_combo_mupios(combos['departamentos'][value].municipios).html());
        });

        $('#solicitud_credito_dre_check, #solicitud_credito_icr_check').on('change', function() {
            var id = $(this).attr('id');
            var last_index = id.lastIndexOf('_');
            var new_id = id.substring(0, last_index);

            $('#' + new_id).val('');

            if (!$(this).parent().hasClass('switch-off'))
                $('#' + new_id).slideDown();
            else
                $('#' + new_id).hide();
        });

        $('#experiencia').on('change', cambiar_experiencia_banco);

        $('.money').autoNumeric('init', {
            aSep: '.',
            aDec: ',',
            mDec: 0,
            wEmpty: 'zero',
            vMin: '0.0',
        });

        set_combos_deptos();
        set_combos_mupios();


        $('form').submit(function() {
            $(".money").each(function(index) {
                var valor = $(this).autoNumeric('get');
                $(this).val(valor);
            });
        });
        
        cambiar_experiencia_banco();
    });

    function cambiar_experiencia_banco() {
        if ($('#experiencia').val() != 1){
            $("#calidad_de").val(0);
            $("#calidad_de").hide();
            $("#calidad_de").parent().find('label').hide();
        }else{
            $("#calidad_de").show();
            $("#calidad_de").parent().find('label').show();
        }
    }

    function crear_combo_deptos() {
        $.each(combos['departamentos'], function(key, value) {
            departamentos.append('<option value="' + key + '" >' + value.nombre + '</option>');
        });
    }

    function crear_combo_mupios(municipios_option) {
        var municipios = $('<select>');
        municipios.append('<option value="" ></option>');

        $.each(municipios_option, function(key, value) {
            municipios.append('<option value="' + value.id + '" >' + value.nombre + '</option>');
        });

        return municipios;
    }

