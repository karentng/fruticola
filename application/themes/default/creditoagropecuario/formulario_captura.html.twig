    function validate() {

        if ($('[name^="referencias_fam2"]').filter(function() {
            return $(this).val() != "";
        }).length > 0) {

        }

        $('[name^="referencias_fam2"]').each(function() {
            var obj = $(this);

        });
    }

    function obtenerNumeroInput(obj) {

        var value = obj.val();
        if (obj.hasClass('money')) {
            ///por alguna razon no llegan inicializados los inputs 
            obj.autoNumeric('init', {
                aSep: '.',
                aDec: ',',
                wEmpty: 'zero',
                mDec: 0,
                vMin: '0.0',
            });

            value = obj.autoNumeric('get');
        }

        if (isNaN(value) || !value) {
            return 0;
        } else {
            return parseFloat(value);
        }
    }

</script>

